function boucado_get_username($member_id) {
// Member holen
	db_set_active('boucado_matrix');
	$query = db_select('boucado_members', 'm');
	$query
		->fields('m')
  		->condition('m.member_id', $member_id, '=')
  		->range(0, 1);
	$result = $query->execute();
	db_set_active();
	
	foreach ($result as $record) {
  		$thisuser = $record;
	}	
	return $thisuser->username;
}

