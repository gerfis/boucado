  		$thisuser = $record;
	}

 // Sponsor holen:
 	if (isset($thisuser) && ($thisuser->member_id > 1)) {
 	db_set_active('boucado_matrix');
 	$query = db_select('boucado_members', 'm');
	$query
		->fields('m')
  		->condition('m.member_id', $thisuser->sponsor_id, '=')
  		->range(0, 1);
	$result = $query->execute();

	db_set_active();
		
	foreach ($result as $record) {
