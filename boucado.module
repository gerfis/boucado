// Upline rekursiv bis zur 9. Ebene aktualisieren
function pay_upline($payer_name, $upline_name, $payment_id, $transaction, $payer_bonuslevel, $level) {
	if ($upline_name == "admin") {
		
		// admin auszahlen:

		// bonuslevel vergleichen und Betrag holen
		db_set_active('boucado_matrix');
		$sql = "SELECT amount FROM fees WHERE from_bonuslevel=" . $payer_bonuslevel . " AND to_bonuslevel=5";
		$fees = db_query($sql);
		$fee = $fees->fetchCol();
		$adminfee = (10 - $level) * $fee[0];
		
		$sql = "SELECT title FROM bonuslevels WHERE bid=" . $payer_bonuslevel;
		$result = db_query($sql);
		$bonus = $result->fetchCol();

		// Insert in table
		try {		
			db_insert('wallet')
			->fields(array('amount','from_id','to_id','type_cash','descr','payment_id','transaction', 'level'))
			->values(array(
			'amount' => $adminfee,
			'from_id' => $payer_name,
			'to_id' => $upline_name,
			'type_cash' => $bonus[0] .'-Bonus',
			'descr' => 'monthly Payment from Downline',
			'payment_id' => $payment_id,
			'transaction' => $transaction,
		 	'level' => $level
			))
			->execute();
			db_set_active();
		} catch (PDOException $e) {
			dpm($e->getMessage());
			db_set_active();
		}

		 db_set_active();		
		drupal_set_message($bonus[0] . ": " . $payer_name . "->admin" . ": (" . $adminfee . ".00)");
		return;		
	} 
	else if ($level > 9) {
		return; 
	} else {
		$receiver = boucado_get_userdata($upline_name);
		$receiver_bonuslevel = $receiver->bonuslevel;
		$next_upline = boucado_get_userdata($receiver->upline);

		// bonuslevel vergleichen und Betrag holen
		db_set_active('boucado_matrix');
		$sql = "SELECT amount FROM fees WHERE from_bonuslevel=" . $payer_bonuslevel . " AND to_bonuslevel=" . $receiver_bonuslevel;
		$fees = db_query($sql);
		$fee = $fees->fetchCol();
		
		$sql = "SELECT title FROM bonuslevels WHERE bid=" . $payer_bonuslevel;
		$result = db_query($sql);
		$bonus = $result->fetchCol();
		
		$nextlevel = $level + 1;
				 
		// Insert in table
		try {		
			db_insert('wallet')
			->fields(array('amount','from_id','to_id','type_cash','descr','payment_id','transaction', 'level'))
			->values(array(
			'amount' => $fee[0],
			'from_id' => $payer_name,
			'to_id' => $upline_name,
			'type_cash' => $bonus[0] .'-Bonus',
			'descr' => 'monthly Payment from Downline',
			'payment_id' => $payment_id,
			'transaction' => $transaction,
		 	'level' => $level
			))
			->execute();
			db_set_active();
		 drupal_set_message($bonus[0] . ": " . $payer_name . "->" . $upline_name . ": (" . $fee[0] . ")");
		} catch (PDOException $e) {
			dpm($e->getMessage());
			db_set_active();
		}

		// bonusdifferenz
		db_set_active('boucado_matrix');
		$sql = "SELECT amount FROM fees WHERE from_bonuslevel=" . $payer_bonuslevel . " AND to_bonuslevel=" . $payer_bonuslevel;		
		$result = db_query($sql)->fetchCol();
		$payer_bonus = $result[0];
		
		$sql = "SELECT amount FROM fees WHERE from_bonuslevel=" . $payer_bonuslevel . " AND to_bonuslevel=" . $receiver_bonuslevel;
		$result = db_query($sql)->fetchCol();
		$receiver_bonus = $result[0];
		
		$bonusdifference = $payer_bonus - $receiver_bonus;
		
		if ($bonusdifference > 0) { // der admin bekommt den Rest
			try {		
				db_insert('wallet')
				->fields(array('amount','from_id','to_id','type_cash','descr','payment_id','transaction', 'level'))
				->values(array(
				'amount' => $bonusdifference,
				'from_id' => $payer_name,
				'to_id' => 'admin',
				'type_cash' => 'ADMIN-Bonus',
				'descr' => 'REST Bonus from Downline',
				'payment_id' => $payment_id,
				'transaction' => $transaction,
			 	'level' => $level
				))
				->execute();
				db_set_active();
		 		drupal_set_message("ADMIN-Bonus: " . $payer_name . "->" . $upline_name . ": (" . $bonusdifference . ".00)");				
			} catch (PDOException $e) {
				dpm($e->getMessage());
				db_set_active();
			}			
		}
		

		 db_set_active();
		pay_upline($payer_name, $next_upline->username, $payment_id, $transaction, $payer_bonuslevel, $nextlevel);
 	}
}

