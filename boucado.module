	$thisuser->sponsor = $sponsor->username;
	$thisuser->sponsor_id = $sponsor->member_id;
	$thisuser->sponsor_first_name = $sponsor->first_name;
	$thisuser->sponsor_last_name = $sponsor->last_name;
