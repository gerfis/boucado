function boucado_downline_tree($uid,$level=1) {
	if ($level>9) {return;} // Abbruch nach 9 Leveln
	
	db_set_active('boucado_matrix');
	$sql = "SELECT m.member_id, n.m_level, n.username, n.first_name, n.last_name FROM {test_matrix} m JOIN {test_members} n ON m.member_id = n.member_id WHERE host_id=" . $uid . " ORDER by m.member_id";
	$result = db_query($sql);
	db_set_active();
	$output = "";
	if ($result->rowCount()) {
		$count = $result->rowCount();
  		foreach ($result as $row) {
  				$output .= $level . '<span class="level' . $level . ' stufe' . $row->m_level . ' istaktiv" style="padding-left:' . $level*20 . 'px;">' . $row->username . ' (id: ' . $row->member_id . ')</span><br>' . boucado_downline_tree($row->member_id,$level+1);
  		}
 		db_set_active();
		return $output;
	} else {
		db_set_active();
		return "";
	}
}


