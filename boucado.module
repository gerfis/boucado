function boucado_payment_pay($username,$transaction,$status,$amount,$danke = '') {
	db_set_active('boucado_matrix');

	if ($transaction == 'manually') {
		$transaction = time();
	}
	
	// bonuslevel aktualisieren
	$result = db_query("SELECT bid FROM bonuslevels WHERE cost = " . $amount);
	$row = $result->fetchAssoc();
	$bonuslevel = $row['bid'];
	
	db_update('boucado_members')
	->fields(array('bonuslevel' => $bonuslevel))
	->condition('username',$username ,'=')
	->execute();

	// Insert in table
	try {
		$payment_id = db_insert('payments')
			->fields(array('username','transaction','status','amount','bonuslevel'))
			->values(array(
				'username' => $username,
				'transaction' => $transaction,
				'status' => $status,
				'amount' => $amount,
				'bonuslevel' => $bonuslevel))
			->execute();
		db_set_active();
		boucado_pay_uplines($payment_id, $transaction, $username, $bonuslevel);
		drupal_set_message($danke);
	} catch (PDOException $e) {
		dpm($e->getMessage());
		db_set_active();
		return "Fehler beim Speichern.";
	}
}

